<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<package xmlns="http://www.zend.com/server/deployment-descriptor/1.0" version="1.0">
    <name>ZendServerNagios Plugin</name>
    <summary>Zend Server Nagios plugin</summary>
    <description>A plugin for Nagios that allows to monitor Zend Server Events and notifications, cluster status and licence validity</description>
    <version>
        <release>1.0.0</release>
    </version>
    <eula>LICENSE.txt</eula>
    <appdir>src</appdir>
    <scriptsdir>scripts</scriptsdir>
    <healthcheck>index.php</healthcheck>
    <dependencies>
    <required>
      <php>
        <min>5.3</min>
      </php>
      <zendframework2>
        <min>2.0</min>
      </zendframework2>
    </required>
  </dependencies>
    <parameters>
    <parameter display="Web API Key name" id="key" readonly="false" required="true" type="string">
      <defaultvalue>admin</defaultvalue>
    </parameter>
    <parameter display="Web API Secret" id="secret" readonly="false" required="true" type="string">
      <defaultvalue>d2cc2bd7a8252700b51867ce1c7195ba97300ab42e3a400465c495fa91546200</defaultvalue>
    </parameter>
    <parameter display="Zend Server Url" id="target_host" readonly="false" required="true" type="string">
      <defaultvalue>http://localhost:10081</defaultvalue>
    </parameter>
    </parameters>
    </package>
